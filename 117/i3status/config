# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
}

#order += "ipv6"
#order += "disk /"
#order += "run_watch DHCP"
order += "tztime local"
order += "battery 0"
order += "ethernet _first_"
order += "run_watch VPN"
order += "wireless _first_"
order += "volume master"
#order += "load"


wireless _first_ {
        format_up = "W (%ip)"
        format_down = "W (down)"
		align = "left"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E (%ip)"
		format_down = ""
		align = "left"
}

battery 0 {
        format = "%status %remaining"
		format_down = ""
		status_chr = "⚇"
        status_bat = "⚡"
        status_full = "☻"	
		low_threshold = 15
		align = "left"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
		format_down = ""
		align = "left"
}

tztime local {
        format = "%Y-%m-%d || %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

volume master {
					format = "♪(%volume)"
                   format_muted = "♪: muted (%volume)"
                   device = "default"
                   mixer = "Master"
                   mixer_idx = 0
           }


